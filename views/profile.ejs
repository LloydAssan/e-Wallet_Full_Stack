</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">


        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Your personal accounting tool.</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>
                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>
            </div>
        </div>


                  <h2>e-WALLET</h2>
                  <% if (user.local.email) { %>
                  <form action="/messages" method="POST">
                    <input type="text" placeholder="Account Name" name="acct">
                    <input type="number" class="accrec" class="total" placeholder="Accounts Receivable" name="ar">
                    <input type ="number" class="total" class="accpay" value="" placeholder="Accounts Payable" name="ap">
                    <!-- <input type="date" name="date"> -->
                    <button class="button1"type="submit">Submit</button>
                  </form>

        <div class="col-sm-6">
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].acct %></span>
              <span class="ar"><%= messages[i].ar %></span>
              <span class="ap"><%= messages[i].ap %></span>
              <!-- <span><%= messages[i].date %></span> -->
              <span class="trash"><i class="fas fa-eraser"></i></span>
            </li>
          <% } %>
          </ul>

        </div>
        <% } %>
